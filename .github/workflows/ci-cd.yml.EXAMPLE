name: CI - Build and Push Docker Images

on:
  push:
    branches:
      - main        # Deploy to prod
      - development # Build for testing
  workflow_dispatch:

env:
  REGISTRY: ghcr.io
  IMAGE_NAME: ${{ github.repository }}

jobs:
  build-and-push:
    runs-on: ubuntu-latest
    permissions:
      contents: read
      packages: write

    steps:
      - name: Check out code
        uses: actions/checkout@v4

      - name: Set up Docker Buildx
        uses: docker/setup-buildx-action@v3

      - name: Log in to the Container registry
        uses: docker/login-action@v3
        with:
          registry: ${{ env.REGISTRY }}
          username: ${{ github.actor }}
          password: ${{ secrets.GITHUB_TOKEN }}

      # ======================================================
      # 1. API SERVICE
      # ======================================================
      - name: Extract metadata for API
        id: meta-api
        uses: docker/metadata-action@v5
        with:
          images: ${{ env.REGISTRY }}/${{ env.IMAGE_NAME }}-api
          tags: |
            type=raw,value=latest,enable=${{ github.ref == 'refs/heads/main' }}
            type=sha,format=short

      - name: Build and push API image
        uses: docker/build-push-action@v6
        with:
          context: ./api-service
          file: ./api-service/dockerfile
          push: true
          tags: ${{ steps.meta-api.outputs.tags }}
          labels: ${{ steps.meta-api.outputs.labels }}
          cache-from: type=gha
          cache-to: type=gha,mode=max

      # ======================================================
      # 2. TEMPO SERVICE (New!)
      # ======================================================
      - name: Extract metadata for Tempo
        id: meta-tempo
        uses: docker/metadata-action@v5
        with:
          images: ${{ env.REGISTRY }}/${{ env.IMAGE_NAME }}-tempo
          tags: |
            type=raw,value=latest,enable=${{ github.ref == 'refs/heads/main' }}
            type=sha,format=short

      - name: Build and push Tempo image
        uses: docker/build-push-action@v6
        with:
          context: . # Root context required to access ./tempo/Dockerfile if needed, or just ./tempo
          file: ./tempo/Dockerfile
          push: true
          tags: ${{ steps.meta-tempo.outputs.tags }}
          labels: ${{ steps.meta-tempo.outputs.labels }}
          cache-from: type=gha
          cache-to: type=gha,mode=max

      # ======================================================
      # 3. NGINX (FRONTEND)
      # ======================================================
      - name: Extract metadata for Nginx
        id: meta-nginx
        uses: docker/metadata-action@v5
        with:
          images: ${{ env.REGISTRY }}/${{ env.IMAGE_NAME }}-nginx
          tags: |
            type=raw,value=latest,enable=${{ github.ref == 'refs/heads/main' }}
            type=sha,format=short

      - name: Build and push Nginx image
        uses: docker/build-push-action@v6
        with:
          context: .
          file: ./nginx/Dockerfile
          push: true
          tags: ${{ steps.meta-nginx.outputs.tags }}
          labels: ${{ steps.meta-nginx.outputs.labels }}
          cache-from: type=gha
          cache-to: type=gha,mode=max

      # (Optional: Add Scraper back here if you have the code for it)

  # ======================================================
  # JOB: UPDATE GIST CONFIGURATION
  # ======================================================
  update-gist:
    runs-on: ubuntu-latest
    needs: build-and-push # Only update config if build succeeds
    if: github.ref == 'refs/heads/main' # Only deploy config on main branch
    steps:
      - name: Check out code
        uses: actions/checkout@v4

      - name: Prepare Deployment Files
        run: |
          mkdir deploy_package
          
          # Copy the main compose file
          cp docker-compose.prod.yml deploy_package/
          
          # Copy the prod config files we created earlier
          # (Ensure these files exist in your repo!)
          cp prometheus/prometheus.prod.yml deploy_package/
          cp promtail/promtail-config.prod.yml deploy_package/
          cp otel-collector/config.prod.yml deploy_package/
          cp tempo/tempo-config.prod.yml deploy_package/
          cp loki/loki-config.prod.yml deploy_package/

      - name: Update Gist
        uses: exuanbo/actions-deploy-gist@v1
        with:
          token: ${{ secrets.DOCKER_PASSWORD }} # Ensure this token has 'gist' scope
          gist_id: ${{ secrets.GIST_ID }}
          file_path: deploy_package/ # Pushes ALL files in this folder